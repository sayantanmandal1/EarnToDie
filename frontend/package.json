{
  "name": "zombie-car-game-frontend",
  "version": "1.0.0",
  "description": "2D side-scrolling vehicle upgrade survival game set in post-apocalyptic desert",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "build:analyze": "ANALYZE=true webpack --mode production",
    "build:stats": "webpack --mode production --json > webpack-stats.json",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=Integration",
    "test:e2e": "jest --testPathPattern=EndToEnd",
    "test:performance": "jest --testPathPattern=Performance",
    "test:compatibility": "jest --testPathPattern=CrossBrowser",
    "test:balance": "jest --testPathPattern=GameplayBalance",
    "test:systems": "jest --testPathPattern=GameSystems",
    "test:all": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --watchAll=false --passWithNoTests",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "start": "webpack serve --mode development --open",
    "clean": "rm -rf dist",
    "serve": "npx serve -s dist -l 3000",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:pack": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "electron:publish": "npm run build && electron-builder --publish=always",
    "preelectron:pack": "npm run build",
    "preelectron:dist": "npm run build"
  },
  "dependencies": {
    "matter-js": "^0.19.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "@babel/preset-react": "^7.22.15",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "assert": "^2.1.0",
    "babel-loader": "^9.1.3",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "canvas": "^2.11.2",
    "compression-webpack-plugin": "^10.0.0",
    "concurrently": "^9.2.0",
    "core-js": "^3.33.0",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.3",
    "https-browserify": "^1.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "querystring-es3": "^0.2.1",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "wait-on": "^8.0.4",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "keywords": [
    "game",
    "2d",
    "canvas",
    "zombie",
    "car",
    "desert",
    "survival",
    "physics",
    "matter.js"
  ],
  "author": "Zombie Car Game Team",
  "license": "MIT",
  "build": {
    "appId": "com.zombiecargame.app",
    "productName": "Zombie Car Game",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Game"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Zombie Car Game",
      "include": "installer.nsh"
    },
    "dmg": {
      "title": "Zombie Car Game",
      "icon": "assets/icon.icns",
      "background": "assets/dmg-background.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
